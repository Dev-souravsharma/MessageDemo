<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/editsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/ripplebackground"
        android:elevation="16dp"
        android:onClick="send"
        android:text="@string/button"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="type a message"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/message"
        android:inputType="textPersonName"
        android:textColor="#A4000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/editsend"
        app:layout_constraintEnd_toStartOf="@+id/editsend"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/editreplyreceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>